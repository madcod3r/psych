{% extends 'base.html.twig' %}

{% block subTitle %}Person{% endblock %}

{% block content %}
    <h1>Person</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>{{ person.firstName }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ person.lastName }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ person.birthDay ? person.birthDay|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-dark" href="{{ path('person_index') }}">back to list</a>

    <a class="btn btn-outline-primary" href="{{ path('person_edit', {'id': person.id}) }}">edit</a>

    {{ include('person/_delete_form.html.twig') }}
{% endblock %}
