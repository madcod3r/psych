{% extends 'base.html.twig' %}

{% block subTitle %}Person List{% endblock %}

{% block content %}
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Birthday</th>
            <th>Action</th>
        </tr>
        </thead>

        <tbody>
        {% for person in persons %}
            <tr>
                <td>{{ person.id }}</td>
                <td>{{ person.firstName }} {{ person.lastName }}</td>
                <td>{{ person.birthDay | date }}</td>
                <td>
                    <a href="{{ path('person_show', {'id': person.id}) }}">Show</a>
                    <a href="{{ path('person_edit', {'id': person.id}) }}">Edit</a>
                    <a href="{{ path('person_delete', {'id': person.id}) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        {% if persons|length == 0 %}
            <tr>
                <td colspan="4">No persons.</td>
            </tr>
        {% endif %}
        </tbody>

        <tfoot>
        <tr>
            <td colspan="4">Count: {{ persons|length }}</td>
        </tr>
        </tfoot>
    </table>

    <a href="{{ path('person_add') }}" class="btn btn-primary">Add a Person</a>
{% endblock %}
